#!/usr/bin/env bash

if [ ! -f "/nginx.rc" ]; then
    ln -sf /app/opt/nginx/nginx.rc /nginx.rc
fi

. /nginx.rc

exec_init_dir() {
    local init_dir="$1"

    [ ! -d "$init_dir" ] && return 0

    if /usr/bin/find "${init_dir}" -mindepth 1 -maxdepth 1 -type f -print -quit 2>/dev/null | read v; then
        echo_msg "${init_dir} is not empty, will attempt to perform configuration"

        echo_msg "Looking for shell scripts in ${init_dir}"
        find "${init_dir}" -follow -type f -print | sort -V | while read -r f; do
            case "$f" in
                *.sh)
                    if [ -x "$f" ]; then
                        echo_msg "Launching $f";
                        "$f"
                    else
                        # warn on shell scripts without exec bit
                        echo_msg "Ignoring $f, not executable";
                    fi
                    ;;
                *) echo_msg "Ignoring $f";;
            esac
        done
    else
        echo_msg "No files found in ${init_dir}, skipping configuration"
    fi
}

if [ "$1" = "nginx" -o "$1" = "nginx-debug" ]; then
    exec_init_dir /app/opt/nginx/init.d
    exec_init_dir /etc/nginx/init.d
    echo_msg "Configuration complete; ready for start up"
fi

exec "$@"
